<apex:page sidebar="false" showHeader="false" standardStylesheets="false" standardController="Panier__c" renderAs="pdf"  
 applyHtmlTag="false" applyBodyTag="false" extensions="PRG_PanierExtension">

<html>
<head>
      <style type="text/css">
                        
      @page :first{
            @top-left {
            content: element(headerOne);
            }        
       }
    
    
       @page{
            size: 21.0cm 29.7cm;
            margin-top: 120px;/*
            margin-left: 0.4cm;
            margin-right: 0.4cm;*/
            margin-bottom: 1.8cm;
            counter-increment:pages;
            @bottom-center {
            content: element(footer);
            }
            @top-left {
            content: element(header);  
            }
            
        }
            
       div.footer {
        position:running(footer);
        } 
        div.headerOne{
        position:running(headerOne);
        text-align:left;
        }   
        div.header{
        position:running(header);
        text-align:left;
        }     
        #pageNum:before {
        content: counter(page);
        }   
        #pageNums:before {
        content: counter(pages);
        }
        body {
        font-family:Arial,sans-serif;
        }
        table {
        table-layout:fixed;
        }

    </style>
</head>

