<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Date_livraison_different_dimanche</fullName>
    <active>true</active>
    <errorConditionFormula>MOD( Date__c - DATE(1900, 1, 7), 7)= 0</errorConditionFormula>
    <errorDisplayField>Date__c</errorDisplayField>
    <errorMessage>La commande ne peut pas être livrée le dimanche.</errorMessage>
</ValidationRule>
